/* pages/index/index.wxss */
.index-container {
  padding: 0;
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.index-content {
  padding: 0;
}

/* 统一内容模块样式 */
.content-module {
  margin: 0 15rpx 16rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

/* 底部操作栏标准样式 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 15rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  z-index: 100;
}

/* ========== 网络状态指示器 ========== */
.network-status {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #ff4d4f;
  color: white;
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
  z-index: 9999;
  transform: translateY(-100%);
  transition: transform 0.3s ease;
}

.network-status.show {
  transform: translateY(0);
}

.network-status.online {
  background: #52c41a;
}

/* ========== 缓存状态提示 ========== */
.cache-indicator {
  padding: 24rpx;
  text-align: center;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
}

.cache-text {
  display: block;
  font-size: 24rpx;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.cache-action {
  font-size: 22rpx;
  color: #096dd9;
  font-weight: 500;
}

/* ========== 错误状态 ========== */
.error-state {
  padding: 40rpx 32rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.error-text {
  font-size: 28rpx;
  color: #ff4d4f;
  display: block;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.error-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.error-actions {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.retry-btn {
  padding: 16rpx 32rpx;
  background: #1890ff;
  color: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.use-cache-btn {
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* ========== 用户信息区域 ========== */
.user-section {
  background: #1890ff;
  color: white;
  padding: 30rpx 25rpx;
  margin-top: 16rpx;
}

.user-info-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.user-details {
  flex: 1;
  margin-left: 20rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.today-date {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.user-stats {
  text-align: right;
}

.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.stats-label {
  display: block;
  font-size: 22rpx;
  opacity: 0.9;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.login-info {
  flex: 1;
}

.login-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.login-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.login-button {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
}

/* ========== 任务列表 ========== */
.tasks-section {
  margin-bottom: 16rpx;
}

.task-list {
  padding: 0;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 24rpx 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s;
}

.task-item:last-child {
  border-bottom: none;
}

.task-item:active {
  background: #f8f9fa;
}

.task-item.completed {
  opacity: 0.7;
}

/* 任务复选框 */
.task-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #e0e0e0;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.task-checkbox.checked {
  background: #52c41a;
  border-color: #52c41a;
}

.checkbox-icon {
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
  transform: scale(0);
  transition: transform 0.2s;
}

.task-checkbox.checked .checkbox-icon {
  transform: scale(1);
}

/* 任务内容 */
.task-content {
  flex: 1;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.task-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
  line-height: 1.4;
}

.task-title.completed {
  color: #999;
  text-decoration: line-through;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.task-duration {
  font-size: 22rpx;
  color: #666;
  background: #f8f9fa;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.priority-badge {
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: white;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

.priority-1 { background: #52c41a; }
.priority-2 { background: #87d068; }
.priority-3 { background: #faad14; }
.priority-4 { background: #fa8c16; }
.priority-5 { background: #f5222d; }

/* 任务底部 */
.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-range {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.start-time, .end-time {
  font-size: 22rpx;
  color: #666;
  background: #f8f9fa;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.time-separator {
  font-size: 22rpx;
  color: #ccc;
}

.task-actions {
  display: flex;
}

.action-btn.chat-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: #1890ff;
  color: white;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.btn-icon {
  font-size: 20rpx;
}

.btn-text {
  font-size: 20rpx;
}

/* ========== 空状态 ========== */
.empty-state {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-emoji {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  display: block;
  opacity: 0.6;
}

.empty-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* ========== 加载更多 ========== */
.load-more-section {
  margin-bottom: 16rpx;
}

.load-more {
  padding: 24rpx;
  text-align: center;
  transition: all 0.2s;
}

.load-more:active {
  background: #f8f9fa;
}

.load-content {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  color: #666;
  font-size: 24rpx;
}

.loading-dots {
  display: flex;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: #1890ff;
  border-radius: 50%;
  animation: dotPulse 1.4s ease-in-out infinite both;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes dotPulse {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.5; }
  40% { transform: scale(1); opacity: 1; }
}

.no-more {
  padding: 24rpx;
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
}

/* ========== 底部操作栏 ========== */
.bottom-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.action-btn.primary {
  background: #1890ff;
  color: white;
}

.action-btn.secondary {
  background: #f0f0f0;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn .btn-icon {
  font-size: 28rpx;
}